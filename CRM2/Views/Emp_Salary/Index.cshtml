@model IEnumerable<CRM2.Models.Emp_Salary>

@{
    ViewBag.Title = "Index";
}

<h2 style="color:black;font-size:30px;font-weight:bold;text-align:center;font-family:Britannic;">Employee Salary</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    &nbsp;
    @Html.ActionLink("Print PDF", "Print")
</p>
<table class="table">
    <tr style="color:black;background-color:#0275d8;text-align:center">
        <th>
            @Html.DisplayNameFor(model => model.employee_data.Full_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vacation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Month)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.salary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Wage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Net)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.employee_data.Full_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vacation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Month)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Wage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Net)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
